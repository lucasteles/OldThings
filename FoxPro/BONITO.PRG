LPARAMETERS tcTEXTO,tnQT,tnQT2
LOCAL A AS String
LOCAL A2 AS String
LOCAL R AS INTEGER
LOCAL G AS INTEGER
LOCAL B AS INTEGER

IF EMPTY(tcTEXTO) OR EMPTY(tnQT) OR EMPTY(tnQT2) 
	RETURN .F.
ENDIF

A=TCTEXTO
A2=A
r=1
g=1
b=1
_SCREEN.FONTSIZE=12
_SCREEN.FONTBOLD=.T.
FOR I=1 TO tnQT2
	FOR X=1 TO tnQT
		A=A+A2
		? A
		
		IF R>240 THEN
			R=1
		ENDIF

		IF G>240 THEN
			G=1
		ENDIF
		
		IF B>240 THEN
			B=1
		ENDIF


		_SCREEN.FORECOLOR=RGB(R,G,B)
		R=R+1
		G=G+2
		B=B+3
	ENDFOR
	FOR Y=1 TO tnQT
		A=SUBSTR(A,1,(LEN(A)-LEN(A2)))
		? A
		
		IF R>240 THEN
			R=1
		ENDIF

		IF G>240 THEN
			G=1
		ENDIF
		
		IF B>240 THEN
			B=1
		ENDIF

		
		_SCREEN.FORECOLOR=RGB(R,G,B)
		R=R+3
		G=G+2
		B=B+1
	ENDFOR
ENDFOR