SET TALK OFF
DIMENSION AGENDA[1,2]
LOCAL CONTADOR AS Integer
CONTADOR=0

DO WHILE .T.
	OPCAO=0
	CLEAR
	
	@9,8 SAY REPLICATE('=',57)FONT 'COURRIER'
	FOR LN=1 TO 15
		@9+LN,8 SAY '||' FONT 'COURRIER'
		@9+LN,73 SAY '||' FONT 'COURRIER'
	NEXT
	@8+LN,8 SAY REPLICATE('=',57) FONT 'COURRIER'

	
	@13,15 SAY '[1] CADASTRAR'
	@14,15 SAY '[2] CONSULTAR'
	@15,15 SAY '[3] SAIR'
	@16,15 SAY 'SELECIONE A OPÇÃO:' GET OPCAO PICTURE '9'
	READ

	DO CASE 	 
		CASE OPCAO =1
			CONTADOR = CONTADOR + 1
			DIMENSION AGENDA[CONTADOR,2]
			@ 18,15 SAY 'Nome: ' GET cNome DEFAULT SPACE(40) 
			@ 19,15 SAY 'Telefone:  ' GET cFone DEFAULT SPACE(20) PICTURE '(99)9999-9999'
			READ
			IF EMPTY(cNome) OR EMPTY(cFone)
				@ 21,15 SAY 'Digite todos os valores!...'
				READ
				CONTADOR = CONTADOR - 1
				LOOP
			ENDIF
			AGENDA[CONTADOR,1]=cNome 
			AGENDA[CONTADOR,2]=cFone
			cNome = SPACE(40) 
			cFone = SPACE(20)
		CASE OPCAO =2
			CLEAR
			@9,10 SAY '||'+REPLICATE('=',30)+'LISTA'+REPLICATE('=',30)+'||' FONT 'COURRIER'
			FOR LNXI=1 TO CONTADOR
				@ 9+LNXI,12 SAY PADR(ALLTRIM(AGENDA[LNXI,1]),40,'-') + PADR(ALLTRIM(AGENDA[LNXI,2]),20)
				@ 9+LNXI,10 SAY '||' FONT 'COURRIER'
				@ 9+LNXI,87 SAY '||' FONT 'COURRIER'
			NEXT
			@9+LNXI,10 SAY '||'+REPLICATE('=',65)+'||' FONT 'COURRIER'
			READ
		CASE OPCAO =3
			CLEAR
			CLEAR GETS
			EXIT
	ENDCASE
	CLEAR GETS
ENDDO


