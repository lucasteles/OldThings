LPARAMETERS tnNUMERO,tnBASE,tnACAO

LOCAL lcRET,lcAUX as String
STORE '' TO lcAUX 
lcHXBASE='ABCDEF'

lcRET=''
DO WHILE tnNUMERO>0
	lcAUX =TRANSFORM(MOD(tnNUMERO,tnBASE))
	lcAUX =IIF(INT(VAL(lcAUX)) > 9,SUBSTR(lcHXBASE,INT(VAL(lcAUX))-9,1),lcAUX)
	
	lcRET =lcAUX +lcRET 
	tnNUMERO=INT(tnNUMERO/tnBASE)
ENDDO

RETURN lcRET


