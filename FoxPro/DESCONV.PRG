	LPARAMETERS tcNUMERO,tnBASE

	LOCAL lcRET,lcAUX as String
	STORE '' TO lcAUX 
	lcHXBASE='ABCDEF'

	lnRETORNO=0
	lnPOTENCIA=0
	FOR lnXI = LEN(tcNUMERO) TO 1 STEP -1
		lcAUX = SUBSTR(tcNUMERO,lnXI,1)
		IF lcAUX  $ lcHXBASE
			LCAUX=TRANSFORM(9+AT(LCAUX,lcHXBASE))
		ENDIF
		
		lnRETORNO = lnRETORNO + (INT(VAL(LCAUX))*(tnBASE^lnPOTENCIA))
		lnPOTENCIA = lnPOTENCIA + 1		
	ENDFOR
	RETURN INT(lnRETORNO)


