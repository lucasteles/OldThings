SET PROCEDURE TO MENURAIZ

=CREATEOBJIMAGE()

DO FORM PRINCIPAL

READ EVENTS

DEFINE CLASS MYIMAGES AS Custom
	ADD OBJECT ITENS AS COLLECTION
	
	FUNC NOVAIMAGE
	**************
		LOCAL loIMAGE AS Object
		loIMAGE = CREATEOBJECT('EMPTY')
		=ADDPROPERTY(loIMAGE,'IMAGE',NULL)
		=ADDPROPERTY(loIMAGE,'THUMB',NULL)
		=ADDPROPERTY(loIMAGE,'TEMP',"")
		RETURN(loIMAGE)
	ENDFUNC
	
	PROC ADDIMAGE
	*************
		LPARAMETERS tcKEY, toIMAGE, toTUMB, tcTEMPFILE
		
		LOCAL loAUXIMAGES AS Collection
		loAUXIMAGES 		= THIS.NOVAIMAGE()
		loAUXIMAGES.IMAGE 	= toIMAGE
		loAUXIMAGES.THUMB 	= toTUMB
		loAUXIMAGES.TEMP	= tcTEMPFILE

		THIS.ITENS.Add(loAUXIMAGES,tcKEY)

		RETURN(.T.)
	ENDPROC
	
	PROC CLEARALL
	*************
		=CREATEOBJIMAGE()
	ENDPROC

ENDDEFINE

PROC CREATEOBJIMAGE
*******************
	RELEASE goIMAGES
	PUBLIC goIMAGES AS MYIMAGES
	goIMAGES = CREATEOBJECT('MYIMAGES')
ENDPROC